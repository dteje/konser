<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SandwitchCreator">

    <LinearLayout
        android:id="@+id/generalLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="344dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/bMeat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="buttonIngredient"
                    android:text="Carne/Pescado"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bVeggies"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="buttonIngredient"
                    android:text="Verduras"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bCheese"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="buttonIngredient"
                    android:text="Queso"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bSpecial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="buttonIngredient"
                    android:text="Especial"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bSauces"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="buttonIngredient"
                    android:text="Salsas"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="273dp"
                android:orientation="horizontal">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerIngredientesId"
                    android:layout_width="match_parent"
                    android:layout_height="275dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textYourSandwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your sandwitch: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/finalSandWitch"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:gravity="center"
            android:textSize="25dp"
            android:text="" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>